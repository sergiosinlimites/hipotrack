{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug backend (server.js)",
        "program": "${workspaceFolder}/server.js",
        "cwd": "${workspaceFolder}",
        "env": {
          "PORT": "3001",
          "NODE_ENV": "development"
        },
        "console": "integratedTerminal",
        "skipFiles": [
          "<node_internals>/**"
        ]
      }
    ]
  }